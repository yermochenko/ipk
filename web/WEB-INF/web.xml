<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

    <display-name>Пример приложения для ТКП (ИПКиПК)</display-name>
    <request-character-encoding>UTF-8</request-character-encoding>

    <servlet>
      <servlet-name>ProductListServlet</servlet-name>
      <servlet-class>by.vsu.ipk.web.ProductListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductListServlet</servlet-name>
        <url-pattern>/product/list.html</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>MyServlet</servlet-name>
      <servlet-class>by.vsu.ipk.web.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/page.html</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>product/list.html</welcome-file>
    </welcome-file-list>
</web-app>
